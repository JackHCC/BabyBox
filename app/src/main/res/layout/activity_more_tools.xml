<?xml version="1.0" encoding="utf-8"?>
<com.jack.carebaby.utils.ThreeDSlidingLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/more_tools_slidingLayout"
    tools:context=".ui.MoreToolsActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/more_tools_menu"
        android:layout_width="270dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:background="@color/colorPrimary"
        android:visibility="invisible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="工具包说明"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#00000000"
                android:textColor="@color/white"
                android:text="Click Me！（点我！）" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/more_tools_content"
        android:layout_width="320dip"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="#e9e9e9"
        android:orientation="vertical"
        android:visibility="visible" >

        <Button
            android:id="@+id/more_tools_menuButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:text="查看说明" />

        <ListView
            android:id="@+id/more_tools_contentList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:cacheColorHint="#00000000" >
        </ListView>
    </LinearLayout>

    <com.jack.carebaby.utils.Image3dView
        android:id="@+id/more_tools_image_3d_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:visibility="invisible" />

</com.jack.carebaby.utils.ThreeDSlidingLayout>