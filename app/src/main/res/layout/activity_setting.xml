<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/setting_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/style_drawable_click_bg_change"
            android:clickable="true"
            android:layout_marginTop="18dp">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="个人资料"
                android:textColor="@color/textColor"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_baby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/style_drawable_click_bg_change"
            android:clickable="true"
            android:layout_marginTop="1dp">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="宝宝信息"
                android:textColor="@color/textColor"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_older"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/style_drawable_click_bg_change"
            android:clickable="true"
            android:layout_marginTop="1dp">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="老人信息"
                android:textColor="@color/textColor"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="20dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="桌面悬浮"
                android:textColor="@color/textColor"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"/>

            <com.suke.widget.SwitchButton
                android:id="@+id/setting_floatwindow"
                android:layout_marginLeft="180dp"
                android:layout_width="70dp"
                android:layout_height="40dp"
                app:sb_checked_color="@color/colorPrimary"
                app:sb_effect_duration="300"
                android:layout_marginTop="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="1dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="监测浮窗"
                android:textColor="@color/textColor"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"/>

            <com.suke.widget.SwitchButton
                android:id="@+id/setting_floatcamera"
                android:layout_marginLeft="180dp"
                android:layout_width="70dp"
                android:layout_height="40dp"
                app:sb_checked_color="@color/colorPrimary"
                app:sb_effect_duration="300"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="1dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="夜间模式"
                android:textColor="@color/textColor"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"/>

            <com.suke.widget.SwitchButton
                android:id="@+id/setting_theme"
                android:layout_marginLeft="180dp"
                android:layout_width="70dp"
                android:layout_height="40dp"
                app:sb_checked_color="@color/colorPrimary"
                app:sb_effect_duration="300"
                android:layout_marginTop="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="1dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="振动提醒"
                android:textColor="@color/textColor"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"/>

            <com.suke.widget.SwitchButton
                android:id="@+id/setting_vibration"
                android:layout_marginLeft="180dp"
                android:layout_width="70dp"
                android:layout_height="40dp"
                app:sb_checked_color="@color/colorPrimary"
                app:sb_effect_duration="300"
                android:layout_marginTop="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/setting_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/style_drawable_click_bg_change"
            android:clickable="true"
            android:layout_marginTop="20dp">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="服务订阅"
                android:textColor="@color/textColor"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/style_drawable_click_bg_change"
            android:clickable="true"
            android:layout_marginTop="1dp">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="消息通知"
                android:textColor="@color/textColor"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/style_drawable_click_bg_change"
            android:clickable="true"
            android:layout_marginTop="1dp">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="辅助功能"
                android:textColor="@color/textColor"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/style_drawable_click_bg_change"
            android:clickable="true"
            android:layout_marginTop="1dp">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="应用信息（权限）"
                android:textColor="@color/textColor"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_callback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/style_drawable_click_bg_change"
            android:clickable="true"
            android:layout_marginTop="1dp">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="反馈我们"
                android:textColor="@color/textColor"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/setting_egg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/style_drawable_click_bg_change"
            android:clickable="true"
            android:layout_marginTop="20dp">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Egg"
                android:textColor="@color/textColor"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/style_drawable_click_bg_change"
            android:clickable="true"
            android:layout_marginTop="1dp"
            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="更多精彩"
                android:textColor="@color/textColor"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/setting_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/style_drawable_click_bg_change"
            android:clickable="true"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="版本更新"
                android:textColor="@color/textColor"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="已是最新版本"
                    android:textSize="14dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:layout_marginRight="20dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/style_drawable_click_bg_change"
            android:clickable="true"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="18dp"
            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="BabyBoxs团队"
                android:textColor="@color/textColor"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>