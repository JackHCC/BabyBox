<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!--头部快捷功能-->
    <LinearLayout
        android:id="@+id/system_title_head"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:background="@color/white"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/system_plan_title_head"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="17dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:text="成长必备"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"/>
        <TextView
            android:id="@+id/system_title_head_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="详情"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/system_title_body"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/system_title_head"
        android:background="@color/windowBackground"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/system_title_body_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/style_drawable_click_bg_change"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_weight="1">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="45dp"
                android:src="@mipmap/system_plan_title_img1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="成长相册"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/system_title_body_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/style_drawable_click_bg_change"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_weight="1">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="45dp"
                android:src="@mipmap/system_plan_title_img2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="成长记录"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/system_title_body_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/style_drawable_click_bg_change"
            android:clickable="true"
            android:layout_weight="1">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="45dp"
                android:src="@mipmap/system_plan_title_img3"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="身高体重"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/system_title_body_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/style_drawable_click_bg_change"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_weight="1">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="45dp"
                android:src="@mipmap/system_plan_title_img4"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="成长账本"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>


    <!--添加成长计划-->
    <LinearLayout
        android:id="@+id/system_content_head"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/style_drawable_click_bg_change"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/system_title_body"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <ImageView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@mipmap/system_plan_content_title"
            />

        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:text="定制宝贝专属成长计划"
            android:gravity="center"
            />
    </LinearLayout>


        <LinearLayout
            android:id="@+id/system_content_title"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_below="@id/system_content_head"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/system_plan_content_head"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="17dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:text="成长计划"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"/>

        </LinearLayout>


    <!--成长计划-->
    <LinearLayout
        android:id="@+id/system_content_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_below="@id/system_content_title"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:text="计划列表"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:gravity="center"/>
    </LinearLayout>

    </RelativeLayout>

</ScrollView>